
<script src="http://code.highcharts.com/highcharts.js"></script>
@using Highsoft.Web.Mvc.Charts
@{
    ViewBag.Title = "highchart";
}

<div class="inner_page-banner one-img">
</div>
<!--//banner -->
<!-- short -->
<div class="using-border py-3">
    <div class="inner_breadcrumb  ml-4">
        <ul class="short_ls">
            <li>
                <a href="~/home">Home</a>
                <span>/ /</span>
            </li>
            <li>Electricity</li>
        </ul>
    </div>
</div>
<!-- //short-->

<h2>highchart</h2>
@{
    List<string> cats = new List<string>();
    foreach (string item in ViewBag.category)
    {
        cats.Add(item);
    }

}
@using Highsoft.Web.Mvc.Charts


@(Html.Highsoft().GetHighcharts(
        new Highcharts
        {
            Title = new Title
            {
                Text = "Electiricity Score card chart"
            },


            XAxis = new List<XAxis>
            {
                new XAxis
                {
                    Title = new XAxisTitle
                    {
                        Text = null
                    },
                    Categories = cats
                }
            },
            YAxis = new List<YAxis>
            {
                new YAxis
                {
                    Min = 0,
                    Title = new YAxisTitle
                    {
                        Text = "Electricity (Mege Watts)",
                        Align = YAxisTitleAlign.High
                    }
                }
            },
            Tooltip = new Tooltip
            {
                ValueSuffix = " MW"
            },
            PlotOptions = new PlotOptions
            {
                Bar = new PlotOptionsBar
                {
                    DataLabels = new PlotOptionsBarDataLabels
                    {
                        Enabled = true
                    }
                }
            },
            Legend = new Legend
            {
                Layout = LegendLayout.Vertical,
                Align = LegendAlign.Right,
                VerticalAlign = LegendVerticalAlign.Top,

                X = -40,
                Y = 100,
                Floating = true,
                BorderWidth = 1,
                BackgroundColor = "white",
                Shadow = new Shadow
                {
                    Enabled = true
                }
            },
            Credits = new Credits
            {
                Enabled = false
            },
            Series = new List<Series>
            {
                new BarSeries
                {
                    Name = "Generation",
                    Data = @ViewData["generationData"] as List<BarSeriesData>
                },
                new BarSeries
                {
                    Name = "Transmission",
                    Data = @ViewData["transmissionData"] as List<BarSeriesData>
                },
                new BarSeries
                {
                    Name = "Distribution",
                    Data = @ViewData["distributionData"] as List<BarSeriesData>
                }
            }
        }
        , "chart")
)